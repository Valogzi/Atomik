{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": ".",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
